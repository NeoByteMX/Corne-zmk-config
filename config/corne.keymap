#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    macros {
        PC: PC_Pass {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N4 &kp N3 &kp N2 &kp N1>;
            label = "PC_PASS";
        };

        Key: Key_Pass {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(N) &kp N0 &kp V &kp I &kp N3 &kp M &kp B &kp R &kp N3 &kp LS(RIGHT_BRACKET) &kp N2 &kp N9>;
            label = "KEY_PASS";
        };

        work: new_password {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp N6 &kp U &kp E &kp LS(F) &kp DLLR &kp LS(T) &kp POUND &kp N9 &kp J &kp LS(G) &kp LS(M) &kp O &kp LS(Z) &kp LS(W) &kp N7 &kp G>;
            label = "NEW_PASSWORD";
        };

        lectura: lectura {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp L &kp J &kp B &kp N6 &kp N2>;
            label = "LECTURA";
        };

        escritura: escritura {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp L &kp J &kp B &kp N1 &kp N0>;
            label = "ESCRITURA";
        };

        New_work: New_work {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp LS(C) &kp D &kp PRCNT &kp F &kp N6 &kp N8 &kp N3 &kp J &kp LS(X) &kp K &kp N4 &kp LS(R) &kp A &kp LS(C) &kp A &kp U>;
            label = "NEW_WORK";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB    &kp Q  &kp W  &kp E         &kp R  &kp T        &kp Y      &kp U  &kp I         &kp O    &kp P     &kp BSPC
&kp LCTRL  &kp A  &kp S  &kp D         &kp F  &kp G        &kp H      &kp J  &kp K         &kp L    &kp SEMI  &kp APOS
&kp LSHFT  &kp Z  &kp X  &kp C         &kp V  &kp B        &kp N      &kp M  &kp COMMA     &kp DOT  &kp FSLH  &mt RIGHT_SHIFT ENTER
                         &kp LEFT_ALT  &mo 1  &kp SPACE    &kp SPACE  &mo 2  &kp LEFT_WIN
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &kp N1        &kp N2        &kp N3        &kp N4        &kp N5          &kp N6     &kp N7    &kp N8     &kp N9         &kp N0           &kp BSPC
&none  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &kp C_VOL_UP    &kp LEFT   &kp DOWN  &kp UP     &kp RIGHT      &kp ESCAPE       &kp DEL
&none  &PC           &Key          &New_work     &kp CAPS      &kp C_VOL_DN    &kp HOME   &kp END   &kp PG_UP  &kp PAGE_DOWN  &kp PRINTSCREEN  &mt RIGHT_SHIFT ENTER
                                   &none         &none         &kp SPACE       &kp SPACE  &mo 3     &none
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none           &kp EXCL   &kp AT    &kp HASH       &kp DLLR  &kp PRCNT    &kp CARET        &kp AMPS         &kp ASTRK  &kp LPAR  &kp RPAR   &kp BSPC
&none           &kp GRAVE  &kp Q     &none          &none     &none        &kp MINUS        &kp EQUAL        &kp LBKT   &kp RBKT  &kp BSLH   &kp SINGLE_QUOTE
&kp LEFT_SHIFT  &work      &lectura  &escritura     &none     &none        &kp NON_US_BSLH  &kp NON_US_HASH  &kp COMMA  &kp DOT   &kp SLASH  &kp BACKSLASH
                                     &kp RIGHT_ALT  &mo 3     &kp SPACE    &kp SPACE        &none            &none
            >;
        };

        layer_3 {
            bindings = <
&none  &none  &none  &none  &none  &none         &kp F1      &kp F2  &kp F3  &kp F4   &kp F5   &kp F6
&none  &none  &none  &none  &none  &none         &kp F7      &kp F8  &kp F9  &kp F10  &kp F11  &kp F12
&none  &none  &none  &none  &none  &bt BT_CLR    &sys_reset  &none   &none   &none    &none    &kp LG(L)
                     &none  &none  &none         &none       &none   &none
            >;
        };
    };
};
